datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id     Int     @id @default(autoincrement())
  plu    String  @unique
  name   String
  stocks Stock[]
}

model Stock {
  id                Int     @id @default(autoincrement())
  quantity_on_shelf Int
  quantity_in_order Int
  shop_id           Int
  product_id        Int
  product           Product @relation(fields: [product_id], references: [id])

  @@unique([product_id, shop_id])
}
